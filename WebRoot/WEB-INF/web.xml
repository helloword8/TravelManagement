<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>TravelManagement</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>EncodeFilter</filter-name>
		<filter-class>cn.sdu.travel.web.filter.EncodeFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EncodeFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<context-param>
		<param-name>file_temp_dir</param-name>
		<param-value>D:\travelmanagement_files\temp</param-value>
	</context-param>
	<context-param>
		<param-name>file_save_dir</param-name>
		<param-value>D:\travelmanagement_files\save</param-value>
	</context-param>
	<servlet>
		<servlet-name>UploadFileServlet</servlet-name>
		<servlet-class>cn.sdu.travel.web.servlet.UploadFile</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>cn.sdu.travel.web.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>cn.sdu.travel.web.servlet.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UploadFileServlet</servlet-name>
		<url-pattern>/UploadFile.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/servlet/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/servlet/RegisterServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Apply</servlet-name>
		<jsp-file>/WEB-INF/pages/MyJsp.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Apply</servlet-name>
		<url-pattern>/apply.html</url-pattern>
	</servlet-mapping>
</web-app>