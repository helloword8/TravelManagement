<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>TravelManagement</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
  	<filter-name>EncodeFilter</filter-name>
  	<filter-class>cn.sdu.travel.filter.EncodeFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>EncodeFilter</filter-name>
	<url-pattern>/*</url-pattern>  
  </filter-mapping>
    <context-param>
        <param-name>file_temp_dir</param-name>
        <param-value>D:\travelmanagement_files\temp</param-value>
    </context-param>
    <context-param>
        <param-name>file_save_dir</param-name>
        <param-value>D:\travelmanagement_files\save</param-value>
    </context-param>
    <servlet>
        <servlet-name>UploadFile</servlet-name>
        <servlet-class>cn.sdu.travel.servlet.UploadFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadFile</servlet-name>
        <url-pattern>/UploadFile.html</url-pattern>
    </servlet-mapping>
</web-app>